{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../functions-build",
    "rootDir": "../..",
    "declaration": false,
    "sourceMap": false
  },
  "include": ["**/*", "../../src/worker/**/*", "../../src/shared/**/*"],
  "exclude": ["node_modules", "../functions-build", "../../src/react-app/**/*", "../../vite.config.ts", "../../*.config.ts"]
}