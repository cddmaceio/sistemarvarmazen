{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./netlify/functions-build",
    "rootDir": "netlify/functions-src",
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "netlify/functions-src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/react-app/**/*",
    "src/worker/**/*",
    "src/shared/**/*"
  ]
}